@model _05_Fiap.Web.AspNet.Models.Zoo

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Zoo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <input asp-for="Zooo"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zooo" class="control-label"></label>
                <input asp-for="Zooo" class="form-control" />
                <span asp-validation-for="Zooo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jaulas" class="control-label"></label>
                <input asp-for="Jaulas" class="form-control" />
                <span asp-validation-for="Jaulas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAbertura" class="control-label"></label>
                <input asp-for="DataAbertura" class="form-control" />
                <span asp-validation-for="DataAbertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntidadeAdministradora"></label>
                <select asp-for="EntidadeAdministradora" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Tipo>()">
                    <option>Selecione</option>
                </select>
            </div>  
            <botao texto="Atualizar"/>
        </form>
    </div>
</div>


